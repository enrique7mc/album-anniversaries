{
  "name": "spotify-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "start:https": "ng serve --host 0.0.0.0 --ssl --ssl-cert ssl/localhost.crt --ssl-key ssl/localhost.key",
    "server:all": "concurrently \"npm run server\" \"ng serve\"",
    "server": "json-server server/db.json",
    "server:auth": "node server/server.js",
    "build": "ng build --configuration production",
    "predeploy": "npm run build",
    "deploy": "firebase deploy",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\"",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/fire": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "core-js": "^3.30.0",
    "firebase": "^10.0.0",
    "json-server": "^1.0.0-alpha.23",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/language-service": "^17.0.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.0.0",
    "firebase-tools": "^13.35.1",
    "husky": "^9.1.7",
    "jasmine-core": "~4.5.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-node": "~10.9.1",
    "typescript": "~5.2.0"
  },
  "lint-staged": {
    "*.{ts,html,scss,css,json}": [
      "prettier --write"
    ]
  }
}
